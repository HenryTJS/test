.content {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
  text-align: center;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.word-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0;
  gap: 0;
}

.word-item {
  position: relative;
  width: 30%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  background-color: #f8ebd8;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.image-container {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1;
  overflow: hidden;
}

.word-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.separator {
  width: 90%;
  height: 2rpx;
  background-color: rgb(196, 193, 193);
  margin: 8rpx auto;
}

.text-container {
  width: 100%;
  padding: 8rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.word-text {
  font-family: "KaiTi", sans-serif;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 12rpx;
  padding: 8rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 5;
  padding: 8rpx 12rpx;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  outline: none;
}

.search-button {
  flex: 1;
  margin-left: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #b55400;
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-button:hover {
  background-color: #b55400;
}