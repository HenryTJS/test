/* 主容器 */
.content {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
  text-align: center;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.word-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding: 0;
  gap: 0; /* 实际间距由 WXML 内联 gapPx 计算注入 */
}

/* 每个单词项 - 修改为相对定位 */
.word-item {
  position: relative;
  width: 30%;
  aspect-ratio: 1 / 1; /* 高宽相等，正方形 */
  box-sizing: border-box;
  overflow: hidden;
}

/* 单词图片 */
.word-image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.word-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-family: "KaiTi", sans-serif;
  font-size: 128rpx;
  /* font-weight: bold; */
  color: #222;
  text-align: center;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 页码信息 */
.page-info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-info {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}


/* 搜索框容器样式 */
.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx;
  padding: 8rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 搜索输入框样式 */
.search-input {
  flex: 5;
  padding: 8rpx 12rpx;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  outline: none;
}

/* 搜索按钮样式 */
.search-button {
  flex: 1; /* 调整宽度比例为1 */
  margin-left: 8rpx;
  padding: 8rpx 16rpx; /* 减小按钮宽度 */
  font-size: 32rpx;
  color: #fff;
  background-color: #b55400;
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-button:hover {
  background-color: #b55400;
}