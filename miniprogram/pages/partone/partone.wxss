.content {
  padding: 20px;
  text-align: center;
  background-size: cover;
  background-position: center;
}
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.word-list {
  display: flex;
  flex-wrap: wrap; /* 自动换行 */
  justify-content: space-between; /* 每行组件均匀分布 */
  gap: 10px; /* 控制组件之间的间距 */
  padding: 10px;
  width: 100%;
  box-sizing: border-box;
}
.search-bar {
  display: flex;
  justify-content: center;
  margin: 10px 0;
}

.search-input {
  width: 80%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
}