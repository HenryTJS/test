/* 主容器 */
.content {
  position: relative;
  min-height: 100vh;
  padding: 20rpx;
  text-align: center;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 单词列表容器 */
.word-list-container {
  position: relative;
  z-index: 1;
  background-color: transparent;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  height: 450rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.word-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  position: relative;
  z-index: 2;
}

/* 容器背景图片，位于容器后面 */
.container-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  border-radius: 20rpx;
  object-fit: cover;
}

/* 每个单词项 - 修改为相对定位 */
.word-item {
  width: 30%;
  margin-bottom: 30rpx;
  position: relative; /* 添加相对定位，作为子元素定位的参考 */
  
  /* 移除背景、边框和阴影 */
  background-color: transparent;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
  
  /* 修改为块级元素 */
  display: block;
  min-height: 200rpx; /* 保持高度 */
}

/* 单词图片 */
.word-image {
  width: 200rpx;        /* 固定宽度 */
  height: 200rpx;       /* 固定高度 */
  display: block;
  margin: 0 auto;
  object-fit: contain;  /* 确保图片完整显示，不会变形 */
}

/* 单词文本 - 修改为绝对定位，叠加在图片中央 */
.word-text {
  position: absolute;  /* 绝对定位 */
  top: 50%;           /* 垂直居中 */
  left: 50%;          /* 水平居中 */
  transform: translate(-50%, -50%); /* 居中修正 */
  
  /* 字体样式：使用小程序支持的字体，放大至原来的五倍 */
  font-family: "KaiTi", sans-serif; /* 小程序推荐字体 */
  font-size: 130rpx;
  font-weight: bold;
  color: #333;
  
  /* 确保文字在图片上层 */
  z-index: 2;
  
  /* 添加文字容器限制，防止溢出 */
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 如果图片有透明区域，可以添加一个遮罩层 */
.word-item::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(255, 255, 255, 0.1); /* 轻微遮罩，增强文字可读性 */
  z-index: 1;
  pointer-events: none; /* 不影响点击 */
}

/* 批次控制容器 */
.batch-control-container {
  margin-top: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  bottom: 10px;
  right: 10px;
  z-index: 2;
}

/* 页码信息 */
.page-info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-info {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}

/* 换一批按钮 */
.change-batch-btn {
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 50rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.3);
  min-width: 200rpx;
}

/* 按钮激活状态 */
.change-batch-btn:active {
  background-color: #388E3C;
  transform: scale(0.98);
}

/* 小字样式 */
.change-batch-text {
  font-size: 12px;
  color: #666;
  cursor: pointer;
}

/* 搜索框容器样式 */
.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx;
  padding: 8rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 搜索输入框样式 */
.search-input {
  flex: 5;
  padding: 8rpx 12rpx;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  outline: none;
}

/* 搜索按钮样式 */
.search-button {
  flex: 1; /* 调整宽度比例为1 */
  margin-left: 8rpx;
  padding: 8rpx 16rpx; /* 减小按钮宽度 */
  font-size: 32rpx;
  color: #fff;
  background-color: #b55400;
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-button:hover {
  background-color: #b55400;
}