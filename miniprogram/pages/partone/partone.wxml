<view class="content">
  <view class="search-container">
    <input class="search-input" placeholder="请输入单字" bindinput="onSearchInput" />
    <button class="search-button" bindtap="onSearchTap">搜索</button>
  </view>
  <image class="background-image" src="/images/beijing1.jpg" mode="aspectFill"></image>
  <view class="word-list">
    <view
      wx:for="{{currentBatch}}"
      wx:key="index"
      class="word-item"
      bindtap="onWordTap"
      data-detail="{{item.detail}}"
      data-text="{{item.text}}"
    >
      <view class="image-container">
        <image class="word-image" src="{{item.image}}" mode="aspectFill"></image>
      </view>
      <view class="separator"></view>
      <view class="text-container">
        <text class="word-text">{{item.text}}</text>
      </view>
    </view>
  </view>
</view>