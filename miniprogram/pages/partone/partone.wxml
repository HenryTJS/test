<!--partone.wxml-->
<view class="content">
  <!-- 搜索框 -->
  <view class="search-container">
    <input class="search-input" placeholder="请输入单字" bindinput="onSearchInput" />
    <button class="search-button" bindtap="onSearchTap">搜索</button>
  </view>

  <image class="background-image" src="/images/beijing1.jpg" mode="aspectFill"></image>

  <view class="word-list" style="gap: {{gapPx}}px;">
    <view
      wx:for="{{currentBatch}}"
      wx:key="index"
      class="word-item"
      bindtap="onWordTap"
      data-detail="{{item.detail}}"
      data-text="{{item.text}}"
    >
      <image
        class="word-image"
        src="{{item.image}}"
        mode="aspectFill"
      ></image>
      <text class="word-text">{{item.text}}</text>
    </view>
  </view>
</view>