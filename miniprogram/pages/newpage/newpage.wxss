body, html {
  margin: 0;
  padding: 0;
  overflow-x: hidden; /* 防止水平滚动条 */
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden; /* 隐藏超出视口的内容 */
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  padding: 20px 20px; /* 重新设置上下间距 */
  padding-top: 0px; /* 减小顶部间距，向上移动标题图片 */
  box-sizing: border-box;
}

.title-image {
  width: 80%;
  margin: 0 auto; /* 移除上下 margin，确保水平居中 */
  display: block;
  position: relative;
  top: -120px; /* 使用更大的负值向上移动标题图片 */
}

.image-container {
  margin-top: -150px; /* 减小顶部间距，向上移动按钮图片 */
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0px; /* 确保图片之间没有间隔 */
  padding: 0; /* 移除所有内边距 */
}

.clickable-image {
  width: 70%;
  max-width: 300px;
  height: 100px;
  object-fit: contain;
  margin: 0;
  transition: transform 0.2s;
}

.clickable-image:active {
  transform: scale(0.9);
}