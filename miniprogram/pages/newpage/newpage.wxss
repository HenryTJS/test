.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
  width: 95%;
  max-width: 500px;
  margin: 50px auto 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8px;
}

.grid-image {
  width: 140px;
  height: 140px;
  object-fit: contain;
  transition: transform 0.2s;
  border: none;
  min-height: 0;
}

.grid-image:active {
  transform: scale(0.9);
}

.grid-label {
  margin-top: 8px;
  font-size: 20px;
  color: #333;
  text-align: center;
  word-break: break-all;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  font-weight: bold;
}