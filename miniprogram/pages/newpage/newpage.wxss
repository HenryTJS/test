body, html {
  margin: 0;
  padding: 0;
  overflow-x: hidden; /* 防止水平滚动条 */
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden; /* 隐藏超出视口的内容 */
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  padding: 20px;
  padding-top: 0px;
  box-sizing: border-box;
}

.top-image {
  width: 100%;
  margin-bottom: -70px;
  position: relative;
  top: -100px;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px; /* 减小间距以适应放大图片 */
  width: 95%; /* 增加宽度以容纳放大图片 */
  max-width: 500px; /* 增加最大宽度限制 */
  margin: 0 auto;
  margin-top: -10px; /* 上移网格 */
}

/* 修改 grid-item 样式 */
.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8px;
}

/* 修改 grid-image 样式 */
.grid-image {
  width: 140px; /* 增大图片尺寸 */
  height: 140px; /* 增大图片尺寸 */
  object-fit: contain;
  transition: transform 0.2s;
  border: none;
  min-height: 0;
}

.grid-image:active {
  transform: scale(0.9); /* 确保点击效果正常 */
}

/* 修改 grid-label 样式 */
.grid-label {
  margin-top: 8px;
  font-size: 20px;
  color: #333;
  text-align: center;
  word-break: break-all;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
  font-weight: bold;
}