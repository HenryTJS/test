body, html {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  padding: 20px;
  padding-top: 0px;
  box-sizing: border-box;
}

.top-image {
  width: 100%;
  position: relative;
  left: 50%; /* 将图片的左边界移动到屏幕中心 */
  transform: translateX(-50%); /* 通过平移使图片居中 */
  margin-bottom: -70px;
  top: -100px;
  display: block;
  margin-left: auto;
  margin-right: auto; /* 确保图片居中 */
}

