.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.options {
  width: 100%;
}

.option-button {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  background-color: #007aff;
  color: white;
  text-align: center;
  border-radius: 5px;
}