.container {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20px 0;
}
.detail-image {
  width: 100vw;
  max-width: 100vw;
  height: auto;
  display: block;
}
.favorite-button {
  margin-top: 16px;
  padding: 12px 20px;
  border-radius: 8px;
  background-color: #1aad19; /* 微信绿 */
  color: #ffffff;
}
.favorite-button.favorited {
  background-color: #cccccc; /* 已收藏状态，灰色区分 */
  color: #333333;
}